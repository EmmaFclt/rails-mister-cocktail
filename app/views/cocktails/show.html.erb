<h1><%= @cocktail.name.capitalize %></h1>

<ul><% @cocktail.doses.each do |dose| %>
      <li><%= dose.description%> de <%= dose.ingredient.name %> <%= link_to "delete", dose_path(dose), method: :delete %></li>
      <% end %>
</ul>

<p class="btn btn-dark"><%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail) %></p>

<p class="btn btn-dark"><%= link_to "Back to Cocktails' List", cocktails_path %></p>
